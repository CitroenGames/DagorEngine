      PageTemplate="generic"
      Description="Shader Compiler Configuration"
      Order="101"
      xmlns="http://schemas.microsoft.com/build/2009/properties">
  <Rule.Categories>
    <Category Name="ShaderCompiler" DisplayName="ShaderCompiler" Description="Shader Compiler Configuration" />
