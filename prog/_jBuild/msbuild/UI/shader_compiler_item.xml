<?xml version="1.0" encoding="utf-8"?>
<Rule Name="ShaderCompilerConfiguration"
      DisplayName="Shader Compiler"
      PageTemplate="generic"
      Description="Shader Compiler Configuration"
      xmlns="http://schemas.microsoft.com/build/2009/properties">
  <Rule.Categories>
    <Category Name="ShaderCompiler" DisplayName="Shader Compiler" Description="Shader Compiler Configuration" />
  </Rule.Categories>
